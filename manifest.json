{
  "manifest_version": 3,
  "name": "CorrectSpell",
  "version": "1.0.0",
  "description": "A spell checker extension for web pages",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "CorrectSpell"
  },
  "web_accessible_resources": [
    {
      "resources": ["dictionaries/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}